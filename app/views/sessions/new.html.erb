<div class="container-fluid">

  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 top-pad-5">
      <div class="login-reg-header">

        <h1>Welcome to Chessly!</h1>
        <p>A place for your favorite games!</p>

        <% if flash[:notice] %>
          <% flash.each do |name, msg| %>
            <div class="alert alert-success alert-login-reg-width" role="alert">
              <%= msg %>
            </div>
          <% end %>
        <% end %>


        <% if @user.errors.any? %>

          <% @user.errors.full_messages.each do |err| %>
            <div class="alert alert-danger alert-login-reg-width" role="alert">
              <p><%= err %></p>
            </div>
          <% end %>

        <% end %>

      </div>

      <%= form_for @user, url: signin_path, class: "form" do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control login-reg-form-input-width" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control login-reg-form-input-width" %>
        </div>
        <%= f.submit "Log In", class: "btn btn-primary" %>

      <% end %>

      <div class="login-reg-footer">
        <p>Need an account? <%= link_to "Register", new_registration_path %></p>
      </div>

    </div>
  </div>
  <div class="col-lg-4"></div>

</div>